# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET 	/users/all					controllers.Usuarios.all()

GET 	/users						controllers.Usuarios.index()

GET 	/user/:id 					controllers.Usuarios.find(id: Long)

POST 	/users/new					controllers.Usuarios.create()

POST 	/users/:id/delete 			controllers.Usuarios.delete(id: Long)

GET     /logout						controllers.Usuarios.logout()

POST 	/login						controllers.Usuarios.login()

POST 	/facultad/:id/nuevoMensaje	controllers.Facultades.nuevoMensaje(id: String)

GET		/cursos/:id  				controllers.Cursos.show(id: String)

GET		/curso/:id/chat				controllers.Cursos.chat(id: String,codigo: String)

# ADMIN

GET		/admin/facultades			controllers.Admin.facultades()

#GET		/admin/carreras				controllers.Admin.carreras()

#GET 	/admin/universidades		controllers.Admin.universidades()

#GET 	/admin/Usuarios				controllers.Admin.usuarios()

# FACULTADES

POST 	/facultades/new					controllers.Facultades.create()