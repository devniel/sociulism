# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                           				controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file               				controllers.Assets.at(path="/public", file)

#GET 	/users/all									controllers.Usuarios.all()

GET 	/users										controllers.Usuarios.index()

GET 	/user/:id 									controllers.Usuarios.find(id: Long)

POST 	/users/new									controllers.Usuarios.create()

POST 	/users/:id/delete 							controllers.Usuarios.delete(id: Long)

GET     /logout										controllers.Usuarios.logout()
				
POST 	/login										controllers.Usuarios.login()

POST 	/facultad/:id/nuevoMensaje					controllers.Facultades.nuevoMensaje(id: String)

# CURSO

GET		/cursos/:id  								controllers.Cursos.show(id: String)

GET		/curso/:id/chat								controllers.Cursos.chat(id: String,codigo: String)

GET		/curso/:id/asesoria							controllers.Cursos.asesoria(id: String)

POST	/curso/:id/asesoria/new						controllers.Cursos.nuevaAsesoria(id: String)

GET 	/curso/:id/profesores/all					controllers.Cursos.getProfesorDelCurso(id: String)

# CURSO - PREGUNTAS

GET 	/curso/:cid/pregunta/:pid					controllers.Cursos.getPregunta(cid: String, pid: String)

POST 	/curso/:cid/pregunta/:pid/respuesta			controllers.Cursos.postRespuesta(cid: String, pid:String)

# ADMIN

GET		/admin/facultades							controllers.Admin.facultades()

#GET	/admin/carreras								controllers.Admin.carreras()

#GET 	/admin/universidades						controllers.Admin.universidades()

GET		/admin/cursos			 					controllers.Admin.cursos()

# FACULTADES

POST 	/facultades/new								controllers.Facultades.create()

# CURSOS

POST 	/cursos/new									controllers.Cursos.create()

# ADMIN - USUARIOS

GET 	/admin/usuarios								controllers.Usuarios.all()

GET 	/admin/usuarios/:id/edit					controllers.Usuarios.edit(id: Long)

GET 	/admin/usuarios/create						controllers.Usuarios.showCreate()

POST 	/admin/usuarios/new							controllers.Usuarios.create()

POST 	/admin/usuarios/:id/update					controllers.Usuarios.update(id: Long)

# ADMIN - FACULTADES

GET 	/admin/facultades 							controllers.Facultades.all()
