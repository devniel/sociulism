# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                           				controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file               				controllers.Assets.at(path="/public", file)

# USUARIOS

#GET 	/users/all									controllers.Usuarios.all()

GET 	/users										controllers.Usuarios.index()

GET 	/user/:id 									controllers.Usuarios.find(id: Long)

POST 	/users/new									controllers.Usuarios.create()

POST 	/users/:id/delete 							controllers.Usuarios.delete(id: Long)

GET     /logout										controllers.Usuarios.logout()
				
POST 	/login										controllers.Usuarios.login()

POST 	/facultad/:id/nuevoMensaje					controllers.Facultades.nuevoMensaje(id: String)

# USUARIOS - PROFESORES

GET 	/usuarios/profesores 						controllers.Usuarios.getProfesores()

# USUARIOS - ALUMNOS

GET 	/usuarios/alumnos 							controllers.Usuarios.getAlumnos()
 			
# FACULTADES

POST 	/facultades/new								controllers.Facultades.create()

# CURSOS

POST 	/cursos/new									controllers.Cursos.create()

##########################################################################################################################3

# ADMIN - USUARIOS

# Mostrar todos los usuarios

GET 	/admin/usuarios								controllers.Usuarios.all()

# Mostrar usuarios por tipo , para la vista filtrada de usuarios en ADMIN

GET 	/admin/usuarios/							controllers.Usuarios.showUsuariosPorTipo(tipo : Integer)

GET 	/admin/usuarios/:id/edit					controllers.Usuarios.edit(id: Long)

GET 	/admin/usuarios/create						controllers.Usuarios.showCreate()

POST 	/admin/usuarios/new							controllers.Usuarios.create()

POST 	/admin/usuarios/:id/update					controllers.Usuarios.update(id: Long)

GET 	/admin/usuarios/:id/delete					controllers.Usuarios.delete(id: Long)

GET 	/admin/usuarios/:id/asesores				controllers.Usuarios.asesoresDeUsuario(id: Long)

POST 	/usuario/:id/asesores/new					controllers.Usuarios.postUsuarioAsesor(id: Long)



# ADMIN - FACULTADES

GET 	/admin/facultades 							controllers.Facultades.all()

GET 	/admin/facultades/:id/edit					controllers.Facultades.edit(id: Long)

GET 	/admin/facultades/create					controllers.Facultades.showCreate()

POST 	/admin/facultades/new						controllers.Facultades.create()

POST 	/admin/facultades/:id/update				controllers.Facultades.update(id: Long)

GET 	/admin/facultades/:id/delete				controllers.Facultades.delete(id: Long)

# ADMIN - CURSOS

GET 	/admin/cursos 								controllers.Cursos.all()

GET 	/admin/cursos/:id/edit						controllers.Cursos.edit(id: Long)
	
GET 	/admin/cursos/create						controllers.Cursos.showCreate()

POST 	/admin/cursos/new							controllers.Cursos.create()

POST 	/admin/cursos/:id/update					controllers.Cursos.update(id: Long)

GET 	/admin/cursos/:id/delete					controllers.Cursos.delete(id: Long)

POST 	/admin/cursos/:id/add/seccion/				controllers.Cursos.addSeccion(id: Long)

# ADMIN - CURSOS - SECCIONES

GET 	/admin/cursos/:id/seccion/:sid				controllers.Cursos.showSeccion(id: Long, sid: Long)

GET 	/admin/cursos/:id/secciones 				controllers.Cursos.showSecciones(id: Long)

POST 	/admin/cursos/:id/seccion/:sid/add/profesor/		controllers.Cursos.asignarProfesor(id: Long, sid: Long)

POST 	/admin/cursos/:id/seccion/:sid/update/profesor/		controllers.Cursos.updateProfesor(id: Long, sid: Long)

POST 	/admin/cursos/:id/seccion/:sid/add/alumno/		controllers.Cursos.agregarAlumno(id: Long, sid: Long)

##########################################################################################################################

# PUBLIC - CURSOS 

# PUBLIC - CURSOS - SECCIONES

GET 	/cursos/:id/seccion/:sid				controllers.Cursos.showPublicSeccion(id: Long, sid: Long)

GET 	/cursos/:cid/seccion/:sid/preguntas  	controllers.Cursos.showPreguntas(cid: Long, sid: Long)

# PUBLIC - CURSOS

GET		/cursos/:id  								controllers.Cursos.show(id: String)

# GET		/curso/:id/chat								controllers.Cursos.chat(id: String,codigo: String)

#GET		/curso/:cid/seccion/:sid/asesoria			controllers.Cursos.asesoria(id: String)

POST	/cursos/:cid/seccion/:sid/asesoria/new		controllers.Cursos.postPregunta(cid: Long, sid: Long)

GET 	/curso/:id/profesores/all					controllers.Cursos.getProfesorDelCurso(id: String)

# CURSO - PREGUNTAS

GET 	/cursos/:cid/seccion/:sid/pregunta/:pid	 					controllers.Cursos.showPregunta(cid: Long, sid: Long, pid: Long)

POST 	/cursos/:cid/seccion/:sid/pregunta/:pid/respuesta			controllers.Cursos.postRespuesta(cid: Long, sid: Long, pid:Long)

GET 	/cursos/:cid/seccion/:sid/preguntas/new			controllers.Cursos.showNuevaPregunta(cid: Long, sid:Long)

#################################################################################################################

GET 	/usuarios/:id 								controllers.Usuarios.showUsuario(id:Long)