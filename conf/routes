# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET 	/users/all					controllers.Usuarios.all()

GET 	/users						controllers.Usuarios.index()

GET 	/user/:id 					controllers.Usuarios.find(id: Long)

POST 	/users/new					controllers.Usuarios.create()

POST 	/users/:id/delete 			controllers.Usuarios.delete(id: Long)

GET     /logout						controllers.Usuarios.logout()

POST 	/login						controllers.Usuarios.login()


GET		/cursos/:id  				controllers.Cursos.show(id: Long)
GET		/curso/:id/chat				controllers.Cursos.chat(id: String,codigo: String)